<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text.Font2" parent="">
        <item name="fontFamily">@font/font2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Base" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.White" parent="Text.Base">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Player.Text" parent="@style/Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="CustomDrawerItemTextAppearance">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Profile.Text.Full.Name" parent="Text.Base">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Profile.Text.Username" parent="Text.Base">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Filter_AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Filter_AlertDialog.RadioGroup</item>
    </style>

    <style name="Filter_AlertDialog.RadioGroup" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#2196F3</item>
    </style>

    <style name="Confirm.AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Confirm.AlertDialog.Positive.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Cancel.AlertDialog.Negative.Button</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Base.AlertDialog.Title</item>
    </style>

    <style name="Delete.AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Delete.AlertDialog.Positive.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Cancel.AlertDialog.Negative.Button</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Base.AlertDialog.Title</item>
    </style>

    <style name="Confirm.AlertDialog.Positive.Button" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="backgroundTint">@color/green_900</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="Delete.AlertDialog.Positive.Button" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="backgroundTint">@color/red_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="Custom.AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="materialAlertDialogTitleTextStyle">@style/Base.AlertDialog.Title</item>
    </style>

    <style name="Cancel.AlertDialog.Negative.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="Base.AlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="CornerCut">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="DiamondCut">
        <item name="cornerSize">75dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="SpecificCornerCut">
        <item name="cornerSizeTopRight">75dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeBottomLeft">75dp</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>

    <style name="SpecificCornerRounded">
        <item name="cornerSizeTopRight">75dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomLeft">75dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>
</resources>